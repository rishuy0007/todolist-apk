<%-include("header") -%>
<body>
    <div class="box" id="heading">
        <h1><%=NewList%></h1>

    </div>
    
    <div class="box" >
       
       
       <% newItem.forEach(function(item){ %>

        <form action="/delete" method="post">

            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()" >
                <p><%=item.name %></p> 
            </div>
            <input type="hidden" name="listName" value="<%=NewList%>"/>

        </form>
        <%})%>
        
        
           <form action="/" class="item" method="post">
               <input type="text" name="getItem"  placeholder="New Item" autocomplete="off" >
        
               <button type="submit" name="list" value=<%= NewList %>>+</button>
           </form>
 
    </div>
</body>
<%-include("footer") -%>